<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextureView
        android:id="@+id/texture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_take_picture"
        android:layout_alignParentTop="true" />

    <ImageButton
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/settings_icon"
        android:background="@null"

        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp" />

    <ImageButton
        android:id="@+id/load_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/load_file_icon"
        android:onClick="loadFileAction"
        android:background="@null"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"/>

    <ImageButton
        android:id="@+id/btn_take_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/create_photo_icon"
        android:background="@null"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"/>

    <ImageButton
        android:id="@+id/reverseCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/switch_camera_icon"
        android:background="@null"

        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"/>

    <!--SETTINGS-->
    <ImageButton
        android:id="@+id/filters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/filters_icon"
        android:background="@null"
        android:visibility="invisible"

        android:layout_below="@+id/settings"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"/>

    <ImageButton
        android:id="@+id/languages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/languages_icon"
        android:background="@null"
        android:visibility="invisible"

        android:layout_below="@id/filters"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"/>

    <ImageButton
        android:id="@+id/credits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/credits_icon"
        android:background="@null"
        android:visibility="invisible"

        android:layout_below="@+id/languages"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"/>

    <ImageButton
        android:id="@+id/bugs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bug_icon"
        android:background="@null"
        android:visibility="invisible"

        android:layout_below="@+id/credits"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"/>
    
    <ImageButton
        android:id="@+id/filter_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/off_icon"
        android:background="@null"
        android:visibility="invisible"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"/>

    <ImageButton
        android:id="@+id/filter_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mono_icon"
        android:background="@null"
        android:visibility="invisible"

        android:layout_below="@id/filter_0"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"/>

    <ImageButton
        android:id="@+id/filter_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/negative_icon"
        android:background="@null"
        android:visibility="invisible"

        android:layout_below="@id/filter_1"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"/>

    <ImageButton
        android:id="@+id/filter_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/solarize_icon"
        android:background="@null"
        android:visibility="invisible"

        android:layout_below="@id/filter_2"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"/>

    <ImageButton
        android:id="@+id/filter_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sepia_icon"
        android:background="@null"
        android:visibility="invisible"

        android:layout_below="@id/filter_3"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"/>

    <ImageButton
        android:id="@+id/filter_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sepia_icon"
        android:background="@null"
        android:visibility="invisible"

        android:layout_below="@id/filter_4"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"/>

    <ProgressBar
        android:id="@+id/bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"

        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>